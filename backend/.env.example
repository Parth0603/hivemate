# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/socialhive
MONGODB_TEST_URI=mongodb://localhost:27017/socialhive_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# AWS S3 (for photo storage) - Optional
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=socialhive-photos

# Stripe (for payments) - Optional
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# OpenAI (for AI features) - Optional
OPENAI_API_KEY=

# CORS
CORS_ORIGIN=http://localhost:5173

# WebSocket
WS_PORT=5000

# Email OTP (required for signup verification, forgot password, change password)
OTP_PROVIDER=local
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=HiveMate <your-email@gmail.com>
OTP_SECRET=change-this-otp-secret
OTP_TTL_MINUTES=10
REMEMBER_ME_SESSION_TTL_SECONDS=2592000
REMEMBER_ME_JWT_EXPIRES_IN=30d

# MojoAuth (set OTP_PROVIDER=mojoauth to use this provider)
MOJOAUTH_API_KEY=
MOJOAUTH_API_SECRET=
MOJOAUTH_BASE_URL=https://api.mojoauth.com

# Google Sign-In
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
